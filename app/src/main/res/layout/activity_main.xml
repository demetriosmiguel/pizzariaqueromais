<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demtriosmiguel.pizzariaqueromais.MainActivity"
    android:background="@drawable/telafundodoismeio"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_x="97dp"
        android:layout_y="-2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/promocaoUmId"
            android:src="@drawable/promocaoa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/promocaoDoisId"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/promocaob"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/promocaoTresId"
            android:layout_gravity="left|bottom"
            android:src="@drawable/promocaoc"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza a Moda"
            android:textColor="#ee1d26"
            android:textSize="35dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preço 19,90"
            android:id="@+id/textView"
            android:layout_gravity="right|top"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:textColor="#ee242b"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Vegana"
            android:textColor="#ee1d26"
            android:textSize="35dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="25dp"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preço 19,90"
            android:id="@+id/textView3"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-11dp"
            android:textSize="20dp"
            android:textColor="#ee242b"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferta do dia"
            android:textColor="#ee1d26"
            android:textSize="35dp"
            android:layout_marginTop="235dp"
            android:layout_marginRight="25dp"
            android:id="@+id/textView4"
            android:layout_gravity="top|bottom|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preço 10,90"
            android:id="@+id/textView5"
            android:layout_gravity="top|bottom|right"
            android:layout_marginTop="273dp"
            android:textSize="20dp"
            android:textColor="#ee242b"
            android:layout_marginRight="25dp" />

    </FrameLayout>

</LinearLayout>
